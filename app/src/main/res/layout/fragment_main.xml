<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lakmal.mychatview.fragments.MainFragment"
    android:background="#ffffff"
    android:id="@+id/parent_container">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="90"
            android:id="@+id/text_messages_container"></FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:background="@drawable/chat_controls_container"
            android:layout_marginBottom="0dp"
            android:baselineAligned="false"
            android:minHeight="20dp">

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="Enter your text here.."
                android:layout_weight="70"
                android:background="@drawable/chat_text_box"
                android:layout_margin="4dp"
                android:padding="7dp"
                android:id="@+id/text_message" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:text="Send"
                android:layout_marginLeft="0dp"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="0dp"
                android:id="@+id/sendBtn" />

        </LinearLayout>


    </LinearLayout>

    </RelativeLayout>

</FrameLayout>
